<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scatch - Cart</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
    <style>
        .swiper-button-next,
        .swiper-button-prev {
            color: #000;
            width: 2rem;
            height: 2rem;
            top: 50%;
            transform: translateY(-50%);
            z-index: 10;
        }

        .swiper-button-next {
            right: 0.5rem;
        }

        .swiper-button-prev {
            left: 0.5rem;
        }
    </style>
</head>

<body>
    <%- include('./header.ejs') %>

        <% if(error.length>0){ %>
            <div id="flashError"
                class="absolute top-5 p-3 rounded-lg bg-red-500 text-white left-1/2 -translate-x-1/2 -translate-y-1/2">
                <span class="inline-block text-sm mt-1 mb-1">
                    <%= error %>
                </span>
            </div>
            <% } %>

                <% if(success.length>0){ %>
                    <div id="flashSuccess"
                        class="absolute top-5 p-3 rounded-lg bg-blue-500 text-white left-1/2 -translate-x-1/2 -translate-y-1/2">
                        <span class="inline-block text-sm mt-1 mb-1">
                            <%= success %>
                        </span>
                    </div>
                    <% } %>

                        <div class="w-full min-h-screen flex items-start gap-10 px-20 py-20">
                            <% if(user.cart.length===0){ %>
                                <div
                                    class="w-full flex flex-col gap-5 justify-center items-center text-2xl text-gray-500">
                                    <p>Your cart is empty. Add items to your cart.</p>
                                    <a class="bg-yellow-500 px-5 py-2 rounded-lg text-black" href="/shop">Shop Now</a>
                                </div>
                                <% } else { %>

                                    <div class="swiper-container w-[30%] rounded-lg overflow-hidden relative">
                                        <div class="swiper-wrapper">
                                            <% user.cart.forEach(function(item){ %>
                                                <div class="swiper-slide">
                                                    <div
                                                        class="w-full h-80 bg-[<%= item.product.bgColor %>] flex justify-center items-center">
                                                        <img src="data:<%= item.product.image.contentType %>;base64,<%= item.product.image.data.toString('base64') %>"
                                                            alt="">
                                                    </div>
                                                    <div
                                                        class="flex justify-between px-5 py-4 bg-[<%= item.product.panelColor %>]">
                                                        <h3 class="text-xl text-[<%= item.product.bgColor %>]">
                                                            <%= item.product.productName %>
                                                        </h3>
                                                        <div class="flex items-center gap-2">
                                                            <i
                                                                class="w-7 h-7 bg-white rounded-full flex items-center justify-center ri-add-line"></i>
                                                            <div class="px-2 py-1 rounded-lg bg-white text-black">
                                                                <%= item.quantity %>
                                                            </div>
                                                            <i
                                                                class="w-7 h-7 bg-white rounded-full flex items-center justify-center ri-subtract-line"></i>
                                                        </div>
                                                    </div>
                                                    <div
                                                        class="flex justify-between px-5 py-3 items-center bg-[<%= item.product.textColor %>]">
                                                        <h4 class="text-[<%= item.product.panelColor %>]">Net Total</h4>
                                                        <h2 class="text-[<%= item.product.panelColor %>]">
                                                            <%= item.quantity*item.product.price %>
                                                        </h2>
                                                    </div>
                                                </div>
                                                <% }) %>
                                        </div>
                                        <div class="swiper-button-next"></div>
                                        <div class="swiper-button-prev"></div>
                                    </div>

                                    <div class="w-[70%]">
                                        <h3 class="text-xl">Price Breakdown</h3>
                                        <div class="px-10 mt-5">
                                            <div class="flex mt-2">
                                                <h4 class="w-1/3">Total MRP</h4>
                                                <h4 class="text-green-600">Rs. <%= user.cart.reduce((acc, item)=>
                                                        acc+item.quantity*item.product.price, 0) %></h4>
                                            </div>
                                            <div class="flex mt-2">
                                                <h4 class="w-1/3">Discount on MRP</h4>
                                                <h4 class="text-blue-400">Rs. <%= user.cart.reduce((acc, item)=>
                                                        acc+item.quantity*item.product.discount, 0) %></h4>
                                            </div>
                                            <div class="flex mt-2">
                                                <h4 class="w-1/3">Platform Fee</h4>
                                                <h4 class="text-green-600">Rs. 20</h4>
                                            </div>
                                            <div class="flex mt-2">
                                                <h4 class="w-1/3">Shipping Fee</h4>
                                                <h4 class="text-blue-400">FREE</h4>
                                            </div>
                                        </div>
                                        <div class="w-full h-[1px] bg-black mt-10"></div>
                                        <div class="flex mt-5">
                                            <h4 class="w-1/3 text-xl">Total Amount</h4>
                                            <h3 class="text-xl font-semibold text-green-600">Rs. <%=
                                                    user.cart.reduce((acc, item)=>acc+item.quantity*item.product.price,
                                                    0)-user.cart.reduce((acc,
                                                    item)=>acc+item.quantity*item.product.discount, 0)+20 %></h3>
                                        </div>
                                        <form action="">
                                            <button
                                                class="w-1/3 mt-20 bg-blue-500 px-5 py-2 rounded-lg text-white">Place
                                                Order</button>
                                        </form>
                                    </div>
                                    <% } %>
                        </div>
                        <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
                        <script>
                            document.addEventListener("DOMContentLoaded", function () {
                                const swiper = new Swiper(".swiper-container", {
                                    slidesPerView: 1,
                                    spaceBetween: 10,
                                    loop: true,
                                    navigation: {
                                        nextEl: ".swiper-button-next",
                                        prevEl: ".swiper-button-prev",
                                    },
                                });
                            });

                            if (document.getElementById("flashError") || document.getElementById("flashSuccess")) {
                                setTimeout(() => {
                                    if (document.getElementById("flashError")) {
                                        document.getElementById("flashError").style.display = "none";
                                    }
                                    if (document.getElementById("flashSuccess")) {
                                        document.getElementById("flashSuccess").style.display = "none";
                                    }
                                }, 3000);
                            };
                        </script>
</body>

</html>
