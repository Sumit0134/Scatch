<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scatch - Create or Login your Account</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <%- include('./header.ejs') %>

    <% if (error.length > 0) { %>
        <div id="flashError"
            class="absolute top-5 p-3 rounded-lg bg-red-500 text-white left-1/2 -translate-x-1/2 -translate-y-1/2">
            <span class="inline-block text-sm mt-1 mb-1">
                <%= error %>
            </span>
        </div>
    <% } %>

    <!-- Container -->
    <div class="w-full min-h-screen flex flex-col md:flex-row items-center px-6 md:px-20">
        <!-- Register Section -->
        <div class="w-full md:w-1/2 flex items-center justify-center min-h-screen px-4 md:px-8">
            <div class="w-full">
                <h3 class="text-4xl mb-3 text-center md:text-left">Welcome to <span
                        class="text-blue-400 font-semibold">Scatch</span>
                    <span class="text-blue-400 text-2xl"> - A Premium Bag Shop</span>
                </h3>
                <h4 class="text-2xl mb-5 text-center md:text-left">Create your Account</h4>
                <form autocomplete="off" action="/users/register" method="post">
                    <input
                        class="bg-zinc-100 mb-3 border-[1px] border-zinc-200 px-3 py-2 block rounded-lg w-[90%] md:w-[70%] outline-none"
                        type="text" placeholder="Full Name" name="fullName">
                    <input
                        class="bg-zinc-100 mb-3 border-[1px] border-zinc-200 px-3 py-2 block rounded-lg w-[90%] md:w-[70%] outline-none"
                        type="email" placeholder="Email" name="email">
                    <input
                        class="bg-zinc-100 mb-3 border-[1px] border-zinc-200 px-3 py-2 block rounded-lg w-[90%] md:w-[70%] outline-none"
                        type="password" placeholder="Password" name="password">
                    <input class="rounded-full text-white mt-2 px-4 py-2 cursor-pointer bg-blue-500"
                        type="submit" value="Create">
                </form>
            </div>
        </div>

        <!-- Divider Line -->
        <div class="hidden md:block border-r-2 border-blue-400 h-[80%]"></div>

        <!-- Login Section -->
        <div class="w-full md:w-1/2 flex items-center justify-center min-h-screen px-4 md:px-8">
            <div class="w-full">
                <h4 class="text-2xl mb-5 text-center md:text-left">Login your Account</h4>
                <form autocomplete="off" action="/users/login" method="post">
                    <input
                        class="bg-zinc-100 block px-3 py-2 mb-3 border-[1px] border-zinc-200 w-[90%] md:w-full rounded-lg outline-none"
                        type="email" name="email" placeholder="Email">
                    <input
                        class="bg-zinc-100 block px-3 py-2 mb-3 border-[1px] border-zinc-200 w-[90%] md:w-full rounded-lg outline-none"
                        type="password" name="password" placeholder="Password">
                    <input class="rounded-full text-white mt-2 px-4 py-2 cursor-pointer bg-blue-500"
                        type="submit" value="Login">
                </form>
            </div>
        </div>
    </div>

    <!-- Flash Error Script -->
    <script>
        if (document.getElementById("flashError")) {
            setTimeout(() => {
                document.getElementById("flashError").style.display = "none";
            }, 3000);
        }
    </script>
</body>

</html>
